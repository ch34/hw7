<p id="notice"><%= notice %></p>

<h1>Todoitems</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Task title</th>
      <th>Description</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todoitems.each do |todoitem| %>
      <tr>
        <td><%= todoitem.due_date %></td>
        <td><%= todoitem.task_title %></td>
        <td><%= todoitem.description %></td>
        <td><%= todoitem.done %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @todoitems %>

