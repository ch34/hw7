<h1>New Todoitem</h1>
<p id="notice"><%= notice %></p>


<%= form_for([@todolist, @todoitem]) do |f| %>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>

  <div class="field">
    <%= f.label :task_title %>
    <%= f.text_field :task_title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', todolist_path(@todolist)%>
